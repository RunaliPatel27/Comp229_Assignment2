<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<link rel='stylesheet' href='/Content/auth.css' />
<div class ="body" style = "background-color: #333;">
<!--Header-->
<div class="header" id="myHeader">
  <h1>Add A New Contact </h1>
  <h6 >Enter new contact details below</h6>
  <br><br>
</div>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Name of Contact</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Name of the Contact"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Number</label>
                <input type="text" class="form-control"
                id="numberTextField"
                placeholder="Enter the Number of the Contact"
                name="number" required>
            </div>

            <div class="form-group">
                <label for="emailTextField">E-mail</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter the E-mail of the Contact"
                name="email" required>
            </div>

            <fieldset class="form-group text-center">
            <button class="btn btn-info" type="submit">
                <i class="fas fa-edit"></i> Submit</button>

            <a href="/contact-list" class="btn btn-light">
                <i class="fas fa-undo"></i> Cancel</a>
            </fieldset>
        </form>
    </div>
    </div>
    <br><br><br><br><br>
</div>




